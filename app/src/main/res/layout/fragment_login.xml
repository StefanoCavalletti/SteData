<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="com.example.stedata.AuthViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="32dp"
        android:background="@color/md_theme_light_background">

        <ImageView
            android:src="@drawable/ic_vending_logo"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:contentDescription="@string/app_name" />

        <TextView
            android:text="@string/login_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:textColor="@color/md_theme_light_primary"
            android:layout_marginTop="16dp"
            android:fontFamily="sans-serif-medium" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/email_hint"
            android:layout_marginTop="32dp">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/emailInput"
                android:text="@={viewModel.email}"
                android:inputType="textEmailAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/password_hint"
            android:layout_marginTop="16dp">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/passwordInput"
                android:text="@={viewModel.password}"
                android:inputType="textPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/loginBtn"
            android:text="@{viewModel.isLoading ? @string/login_loading : @string/login_btn}"
            android:enabled="@{!viewModel.isLoading}"
            android:onClick="@{() -> viewModel.login()}"
            style="?attr/materialButtonStyle"
            app:backgroundTint="@color/md_theme_light_primary"
            android:textColor="@color/md_theme_light_onPrimary"
            android:layout_marginTop="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:text="@string/login_to_register_prompt"
            android:id="@+id/toRegisterText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textColor="@color/md_theme_light_secondary"
            android:layout_marginTop="16dp" />
    </LinearLayout>
</layout>